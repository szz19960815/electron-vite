{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": false,
    "allowJs": true,
    "paths": {
      "@render/*": [
        "src/render/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@root/*": [
        "./*"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "dist",
    "build",
    "./src/render/lib",
    "./src/preload/*"
  ]
}